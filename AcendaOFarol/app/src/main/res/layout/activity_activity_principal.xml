<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.example.aluno.acenda_o_farol2.ActivityPrincipal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topo"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp"
        android:background="@drawable/background2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@color/colorBlackWithTransparent">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acenda o Farol"
                android:textColor="@color/colorWhite"
                android:textSize="30dp"
                android:fontFamily="cursive"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text= "Ative o GPS e clique no botão CONTINUAR para que nós te lembremos a hora de acender o farol."
                    android:textColor="@color/colorWhite"
                    android:id="@+id/txvPrincipal"
                    android:textSize="20dp"
                    android:fontFamily="serif"
                    android:padding="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="horizontal"
                    android:gravity="right"
                    >
                    <Button
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:background="@color/colorBrownTheme"
                        android:id="@+id/btnAtivar"
                        android:layout_marginLeft="10dp"
                        android:text="Ativar"
                        android:onClick="eventoBtnAtivar"/>

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:background="@color/colorBrownTheme"
                        android:id="@+id/btnContinuar"
                        android:layout_marginLeft="10dp"
                        android:text="Continuar"
                        android:onClick="eventoBtnContinuar"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
